extends layout
block content

    .container-fluid
        form(action="/services/add" method="POST")
            .form-group
                label(for="itemName") Item
                input#item.form-control(type="text" name="itemName" placeholder="Enter item name")
            .form-group
                label(for="description") Description
                input#item.form-control(type="text" name="description" placeholder="Enter description")
            .form-group
                label(for="quantity") Quantity
                input#item.form-control(type="text" name="quantity" placeholder="Enter phone number")
            a.btn.btn-secondary.mr-4(href="/inventory") Back
            input.btn.btn-secondary(type="submit" value="Submit")